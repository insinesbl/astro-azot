{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "javascript": {
    "globals": ["Astro"],
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "trailingComma": "es5",
      "jsxQuoteStyle": "single",
      "arrowParentheses": "always",
      "lineEnding": "lf",
      "quoteStyle": "single",
      "bracketSpacing": true
    }
  },
  "organizeImports": {
    "enabled": true,
    "include": ["src/**"]
  },
  "files": {
    "ignore": ["dist/**", "node_modules/**"],
    "include": ["src/**", "tools/**/*.ts"]
  },
  "formatter": {
    "include": ["src/**", "tools/**/*.ts"],
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "linter": {
    "include": ["src/**", "tools/**/*.ts"],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
